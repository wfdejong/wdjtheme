@using Orchard.Utility.Extensions;
@using Orchard.ContentManagement;
@{
	if (Model.Title != null) {
		Layout.Title = Model.Title;
	}

	Model.Classes.Add("content-item");
	
	var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();
	Model.Classes.Add(contentTypeClassName);

	Orchard.ContentManagement.IContent contentItem = (Orchard.ContentManagement.IContent)Model.ContentItem;
}
<div class="content blogsummary">
	<h2>
		 @Html.ItemDisplayLink(contentItem)	
	</h2>
			 
	@Display(Model.Content)

	<span class="blogfooter">		
		@if (Model.Meta != null) {
				@Display(Model.Meta)
			
		}
		@if(Model.Footer != null) {
			@Display(Model.Footer)
		}
		|
		<span class="more">
			@Html.ItemDisplayLink(T("more...").ToString(), contentItem)	
		</span>
	</span>
</div>